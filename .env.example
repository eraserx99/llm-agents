# OpenRouter API Configuration
OPENROUTER_API_KEY=your-api-key-here

# MCP Server URLs (HTTP mode - defaults)
MCP_WEATHER_URL=http://localhost:8081
MCP_DATETIME_URL=http://localhost:8082
MCP_ECHO_URL=http://localhost:8083

# TLS/mTLS Configuration (Optional)
TLS_ENABLED=false
TLS_DEMO_MODE=true
TLS_CERT_DIR=./certs

# TLS Port Configuration (when TLS_ENABLED=true)
WEATHER_MCP_PORT=8080
WEATHER_MCP_TLS_PORT=8443
DATETIME_MCP_PORT=8081
DATETIME_MCP_TLS_PORT=8444
ECHO_MCP_PORT=8082
ECHO_MCP_TLS_PORT=8445

# Optional Timeouts
MCP_TIMEOUT=10s
LLM_TIMEOUT=15s
QUERY_TIMEOUT=30s

# Optional Logging
LOG_LEVEL=INFO
