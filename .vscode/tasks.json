{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All",
            "type": "shell",
            "command": "make build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$go"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Build Main (Coordinator)",
            "type": "shell",
            "command": "go build -o bin/llm-agents ./cmd/main",
            "group": "build",
            "problemMatcher": ["$go"]
        },
        {
            "label": "Build Weather MCP",
            "type": "shell",
            "command": "go build -o bin/weather-mcp ./cmd/weather-mcp",
            "group": "build",
            "problemMatcher": ["$go"]
        },
        {
            "label": "Build DateTime MCP",
            "type": "shell",
            "command": "go build -o bin/datetime-mcp ./cmd/datetime-mcp",
            "group": "build",
            "problemMatcher": ["$go"]
        },
        {
            "label": "Build Echo MCP",
            "type": "shell",
            "command": "go build -o bin/echo-mcp ./cmd/echo-mcp",
            "group": "build",
            "problemMatcher": ["$go"]
        },
        {
            "label": "Build Certificate Generator",
            "type": "shell",
            "command": "go build -o bin/cert-gen ./cmd/cert-gen",
            "group": "build",
            "problemMatcher": ["$go"]
        },
        {
            "label": "Test All",
            "type": "shell",
            "command": "go test ./...",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Test with Race Detector",
            "type": "shell",
            "command": "go test -race ./...",
            "group": "test",
            "problemMatcher": ["$go"]
        },
        {
            "label": "Test Verbose",
            "type": "shell",
            "command": "go test -v ./...",
            "group": "test",
            "problemMatcher": ["$go"]
        },
        {
            "label": "Format Code",
            "type": "shell",
            "command": "go fmt ./...",
            "problemMatcher": []
        },
        {
            "label": "Vet Code",
            "type": "shell",
            "command": "go vet ./...",
            "problemMatcher": ["$go"]
        },
        {
            "label": "Lint Code",
            "type": "shell",
            "command": "golangci-lint run",
            "problemMatcher": ["$go"]
        },
        {
            "label": "Quality Checks",
            "type": "shell",
            "command": "make quality",
            "problemMatcher": ["$go"]
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "Tidy Dependencies",
            "type": "shell",
            "command": "go mod tidy",
            "problemMatcher": []
        },
        {
            "label": "Generate Certificates",
            "type": "shell",
            "command": "make generate-certs",
            "problemMatcher": []
        },
        {
            "label": "Start MCP Servers (HTTP)",
            "type": "shell",
            "command": "make run-servers",
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "label": "Start MCP Servers (TLS)",
            "type": "shell",
            "command": "make run-servers-tls",
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "label": "Stop MCP Servers",
            "type": "shell",
            "command": "make stop-servers",
            "problemMatcher": []
        }
    ]
}
